<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_hcc_tablet"
    android:gravity="bottom"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="36dp"
        android:background="@drawable/cali_hcc"
        android:visibility="visible" />    <LinearLayout android:id="@+id/songView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:visibility="invisible"        android:layout_gravity="top|center_horizontal"        android:layout_marginTop="50dp"        android:gravity="center"        android:orientation="vertical" >        <ImageView            android:id="@+id/songIcon"            android:layout_width="250dp"            android:layout_height="250dp"            android:src="@drawable/nota_musical" />        <TextView            android:id="@+id/songName"            style="@style/YellowText"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center_horizontal"             />    </LinearLayout>
</FrameLayout>
