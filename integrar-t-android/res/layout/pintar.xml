<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/rubber"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/rubber" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/cuentos_camara" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/gros30"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/borde" />

            <ImageView
                android:id="@+id/gros20"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/grosor_lapiz" />

            <ImageView
                android:id="@+id/gros10"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/grosor_lapiz" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/violeta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/violeta" />

            <ImageView
                android:id="@+id/verde"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/verde" />

            <ImageView
                android:id="@+id/naranja"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/naranja" />

            <ImageView
                android:id="@+id/rojo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rojo" />

            <ImageView
                android:id="@+id/azul"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/azul" />

            <ImageView
                android:id="@+id/amarillo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/amarillo" />
        </LinearLayout>
        
        
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dibujo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

    </FrameLayout>

</LinearLayout>