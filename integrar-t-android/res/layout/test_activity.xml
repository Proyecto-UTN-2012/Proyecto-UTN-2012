<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/updateTestButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="update Recursos" />

        <Button
            android:id="@+id/loadTestResourceButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="load Recurso" />

        <Button
            android:id="@+id/loadTestSoundButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="load Sonido" />

        <Button
            android:id="@+id/testPictogram"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Test Pictogramas" />

    </LinearLayout>

    <ImageView
        android:id="@+id/testImage"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.27"
        android:background="@drawable/blue_background" />

</LinearLayout>