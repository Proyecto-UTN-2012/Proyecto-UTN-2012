<?xml version="1.0" encoding="utf-8"?><TableLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent" >    <TableRow             android:layout_width="wrap_content"        android:layout_height="wrap_content" > <!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" > -->        <ImageButton            android:id="@+id/pinochoButton"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="5dp"            android:layout_marginTop="15dp"            android:background="#00000000"            android:scaleType="fitStart"            android:src="@drawable/pinocho_portada_celu" />        <ImageButton            android:id="@+id/ricitosButton"            style="@drawable/ricitos_portada_celu"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:layout_marginTop="15dp"            android:background="#00000000"            android:scaleType="fitCenter"            android:src="@drawable/ricitos_portada_celu" />    </TableRow>    <TableRow            android:layout_width="wrap_content"        android:layout_height="wrap_content" >        <TextView            android:id="@+id/pinochoTit"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="5dp"            android:text="PINOCHO"            android:textSize="25sp" />        <TextView            android:id="@+id/ricitosTit"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:text="RICITOS DE ORO"            android:textSize="25sp" />    </TableRow>    <TableRow           android:layout_width="wrap_content"        android:layout_height="wrap_content" >        <ImageButton            android:id="@+id/azarButton"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="5dp"            android:scaleType="fitStart"            android:background="#00000000"            android:src="@drawable/azar_celu" />    </TableRow>    <TableRow           android:layout_width="wrap_content"        android:layout_height="wrap_content" >    </TableRow>    <TextView        android:id="@+id/azarTit"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="10dp"        android:text="ELIGE CALI"        android:textSize="25sp" /></TableLayout>      