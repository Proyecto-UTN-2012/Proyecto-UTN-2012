<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ButtonText">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#cccccc</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">30dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	</style>
    <style name="TaskText">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#aaffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">15dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#aaaaaa</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	</style>
    <style name="TestText">
	    <item name="android:textColor">#ffff00</item>
	    <item name="android:textSize">30dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">0.2</item>
	    <item name="android:shadowDy">1.2</item>
	    <item name="android:shadowRadius">10.0</item>
	</style>
	
    <style name="YellowText">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffff33</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">50sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	</style>

	
    <style name="AppTheme" parent="android:Theme.Light" />
    
    <style name="BoldText" parent="@android:attr/textAppearanceLarge">
        <item name="android:textStyle">bold</item>
    </style>
    
    
  <style name="PaintText">
  <item name="android:textColor">#ffff00</item>
  <item name="android:shadowColor">#000000</item>
  <item name="android:shadowDx">1</item>
  <item name="android:shadowDy">1</item>
  <item name="android:shadowRadius">2</item>
  </style>

<style name="OrigText">
  <item name="android:textColor">#ffffff</item>
  <item name="android:shadowColor">#000000</item>
  <item name="android:shadowDx">1</item>
  <item name="android:shadowDy">1</item>
  <item name="android:shadowRadius">2</item>
  </style>
  
    
    
    
    
</resources>